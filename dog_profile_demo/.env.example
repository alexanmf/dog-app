# -----------------------------
# Flask Application Settings
# -----------------------------
FLASK_ENV=development
SECRET_KEY=CHANGE_ME              # generate a real secret and put in .env only
PORT=5000                         # or 3000 if you prefer

# -----------------------------
# Database (Render PostgreSQL)
# -----------------------------
# Example format:
# postgres://username:password@host:5432/dbname
DATABASE_URL=postgres://USER:PASSWORD@HOST:5432/DATABASE_NAME

# -----------------------------
# AWS S3 Configuration
# -----------------------------
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=CHANGE_ME       # put the real value ONLY in .env on Render
AWS_SECRET_ACCESS_KEY=CHANGE_ME   # never commit the real credentials
S3_BUCKET=your-bucket-name
S3_PUBLIC_BASE=https://your-bucket-name.s3.amazonaws.com

# Optional: If you plan to use presigned URLs
S3_UPLOAD_PREFIX=shots

# -----------------------------
# Upload & File Limits
# -----------------------------
MAX_CONTENT_LENGTH=10_000_000     # Max upload size (10 MB)
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png

# -----------------------------
# Optional Email/Notifications
# -----------------------------
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=CHANGE_ME
MAIL_PASSWORD=CHANGE_ME
